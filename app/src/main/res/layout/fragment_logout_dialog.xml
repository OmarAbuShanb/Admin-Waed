<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bottom_sheet_dialog_logout"
    android:orientation="vertical"
    tools:context=".screens.dialogs.LogoutDialogFragment">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:layout_margin="@dimen/_14sdp"
        android:text="@string/do_you_really_want_to_log_out"
        android:textAlignment="center"
        android:textColor="#ED4E4E"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        android:orientation="vertical">

        <Button
            style="@style/mdtp_done_button_light"
            android:id="@+id/btnLogout"
            android:text="@string/logout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_5sdp" />

        <Button
            style="@style/mdtp_done_button_light"

            android:id="@+id/btnDismiss"
            android:layout_width="match_parent"
            android:text="@string/cancel"
            android:layout_height="match_parent"
            android:padding="@dimen/_5sdp" />
    </LinearLayout>
</LinearLayout>